<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/answer_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/branch_img" />

    <RelativeLayout
        android:id="@+id/nine_selected_five_title"
        android:layout_width="@dimen/dp_470"
        android:layout_height="@dimen/dp_144"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_11"
        android:background="@drawable/user_title_bg">

        <TextView
            android:id="@+id/nine_selected_five_count_down"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_53"
            android:layout_toLeftOf="@+id/nine_selected_five_title_lin2"
            android:background="@drawable/circle_background_shape1"
            android:gravity="center"
            android:text="30"
            android:textSize="@dimen/sp_36" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_marginTop="@dimen/dp_32"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nine_selected_five_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:text="姓名:"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/nine_selected_five_title_candidate_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wait_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_14"
                android:gravity="left"
                android:text="桌号:"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/nine_selected_five_title_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wait_candidate_number"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_14"
                android:gravity="left"
                android:text="学校:"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/nine_selected_five_title_lin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_41"
            android:layout_marginRight="@dimen/dp_31"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="九宫格"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:id="@+id/nine_selected_five_count_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_23"
                android:gravity="center"
                android:text="'?'/15"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>


    </RelativeLayout>

    <!-- <com.facebook.drawee.view.SimpleDraweeView
         android:id="@+id/nine_selected_five_title2_back"
         android:layout_width="@dimen/dp_180"
         android:layout_height="@dimen/dp_230"

         android:layout_marginLeft="@dimen/dp_95"
         android:layout_marginTop="@dimen/dp_85" />-->


    <RelativeLayout
        android:id="@+id/nine_selected_five_question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nine_selected_five_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/nine_selected_five_question_recyclerview"
            android:layout_width="@dimen/dp_875"
            android:layout_height="@dimen/dp_91"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:overScrollMode="never">

        </android.support.v7.widget.RecyclerView>


        <ImageView
            android:id="@+id/nine_selected_five_question_remove_imageview"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_toRightOf="@+id/nine_selected_five_question_recyclerview"
            android:background="@drawable/remove_imageview_selector"
            android:clickable="true"
            android:scaleType="fitXY" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView

        android:id="@+id/nine_selected_five_option_recyclerview"
        android:layout_width="@dimen/dp_800"
        android:layout_height="@dimen/dp_297"
        android:layout_below="@+id/nine_selected_five_question_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:overScrollMode="never">

    </android.support.v7.widget.RecyclerView>


    <!--确认按钮-->
    <Button
        android:id="@+id/nine_selected_five_confirm_button"
        android:layout_width="@dimen/dp_169"
        android:layout_height="@dimen/dp_75"
        android:layout_below="@+id/nine_selected_five_option_recyclerview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_42"
        android:background="@drawable/selector_answer_submit" />

    <RelativeLayout
        android:id="@+id/nine_selected_five_websocket_status"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10" />
</RelativeLayout>