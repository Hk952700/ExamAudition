<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_962"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:id="@+id/alertdialog_answer_view"
        android:layout_width="@dimen/dp_586"
        android:layout_height="@dimen/dp_70" />


    <RelativeLayout
        android:layout_width="@dimen/dp_962"
        android:layout_height="@dimen/dp_586"
        android:layout_below="@+id/alertdialog_answer_view"
        android:background="@drawable/shape_alertdialog_answer_results_bg">


        <TextView
            android:id="@+id/alertdialog_answer_right_answer_text"
            android:layout_width="@dimen/dp_191"
            android:layout_height="@dimen/dp_58"
            android:layout_marginLeft="@dimen/dp_91"
            android:layout_marginTop="@dimen/dp_254"
            android:gravity="center"
            android:text="正确答案"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/sp_32" />

        <TextView
            android:id="@+id/alertdialog_answer_right_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/alertdialog_answer_right_answer_text"
            android:layout_marginLeft="@dimen/dp_64"
            android:layout_toRightOf="@+id/alertdialog_answer_right_answer_text"
            android:ellipsize="end"
            android:maxEms="8"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_40" />

        <TextView
            android:id="@+id/alertdialog_answer_user_answer_text"
            android:layout_width="@dimen/dp_191"
            android:layout_height="@dimen/dp_58"
            android:layout_marginLeft="@dimen/dp_91"
            android:layout_marginTop="@dimen/dp_406"
            android:gravity="center"
            android:text="我的答案"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/sp_32" />

        <TextView
            android:id="@+id/alertdialog_answer_user_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/alertdialog_answer_user_answer_text"
            android:layout_marginLeft="@dimen/dp_64"
            android:layout_toRightOf="@+id/alertdialog_answer_user_answer_text"
            android:ellipsize="end"
            android:maxEms="8"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_40" />

        <Button
            android:id="@+id/alertdialog_answer_button"
            android:layout_width="@dimen/dp_191"
            android:layout_height="@dimen/dp_58"
            android:layout_below="@+id/alertdialog_answer_user_answer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_dialog_answer_result_yes"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/colorwhite"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/alertdialog_answer_imageview"
        android:layout_width="@dimen/dp_339"
        android:layout_height="@dimen/dp_307"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY" />


</RelativeLayout>