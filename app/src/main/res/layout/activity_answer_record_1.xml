<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/answer_record_1_activity_bg">

    <RelativeLayout
        android:layout_width="@dimen/dp_527"
        android:layout_height="@dimen/dp_716"
        android:layout_marginLeft="@dimen/dp_128"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_answer_record_score_list"
        android:padding="@dimen/dp_12">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/answer_record_score_list_bg" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/answer_record_score_list_rev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_marginRight="@dimen/dp_26"
            android:layout_marginBottom="@dimen/dp_56">

        </android.support.v7.widget.RecyclerView>


        <TextView
            android:id="@+id/answer_record_score_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_26"
            android:text="姓名:XXX"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/answer_record_score_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_26"
            android:text="00:00:00:000"
            android:textColor="@color/colorBlack" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/answer_record_score_rvl"
        android:layout_width="@dimen/dp_374"
        android:layout_height="@dimen/dp_410"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_181"
        android:layout_marginRight="@dimen/dp_138"
        android:background="@drawable/answer_record_score_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/answer_record_score_hundreds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/answer_record_score_tens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/answer_record_score_ones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/dp_376"
        android:layout_height="@dimen/dp_79"
        android:layout_below="@+id/answer_record_score_rvl"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_138"
        android:scaleType="fitXY"
        android:src="@drawable/answer_record_text_bg" />

    <Button
        android:id="@+id/answer_record_btn"
        android:layout_width="@dimen/dp_169"
        android:layout_height="@dimen/dp_75"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_242"
        android:layout_marginBottom="@dimen/dp_34"
        android:background="@drawable/selector_answer_submit" />

    <RelativeLayout
        android:id="@+id/answer_record_1_websocket_status"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10" />

    <Button
        android:id="@+id/btn_answer_record_1_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="重试" />
</RelativeLayout>